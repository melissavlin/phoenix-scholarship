
<br/>

<% @all_apps.each do |a| %>

	<%= "GPA : #{a.gpa}" %>
	<%= "Current Position(s) : #{a.current_position}" %><br/>
	<%= "Past Position(s) : #{a.past_position}" %> <br/>
	<%= "Sister Events Attended : #{a.sis_events}" %> <br/>
	<%= "Proudest Achievement : #{a.achievement}" %>
		<br/>

	<!-- vote button, when clicked will change board's has_voted? to true and increase applications vote count -->
	<!-- attach application id to vote -->

	<%= form_tag(castvote_path, method: "post") do %>
			<%= hidden_field_tag(:app_id, a.id) %>
			<%= submit_tag ("Cast Vote")%>
	<% end %>
<hr>
<% end %>


<%= link_to "Back", user_path(current_user) %>